{
  "name": "arxiv-downloader",
  "version": "1.0.0",
  "description": "Tool for downloading and managing arXiv papers",
  "main": "src/arxiv-downloader.js",
  "bin": {
    "adown": "./bin/adown.js"
  },
  "scripts": {
    "install": "chmod +x ./bin/adown.js",
    "start": "node src/cli.js",
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "tsc && npm run copy-templates",
    "dev": "tsc -w",
    "copy-templates": "mkdir -p dist/templates && cp -r src/templates/* dist/templates/"
  },
  "keywords": [
    "arxiv",
    "papers",
    "downloader",
    "pdf",
    "tex",
    "research"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.8.1",
    "chalk": "^5.3.0",
    "commander": "^12.0.0",
    "fs-extra": "^10.1.0",
    "inquirer": "^8.2.4",
    "open": "^10.1.0",
    "ora": "^8.0.1",
    "puppeteer": "^19.7.2",
    "sqlite3": "^5.1.7",
    "yargs": "^17.6.2"
  },
  "devDependencies": {
    "@types/inquirer": "^9.0.7",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.17.21",
    "@types/puppeteer": "^5.4.7",
    "jest": "^29.7.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  }
}
